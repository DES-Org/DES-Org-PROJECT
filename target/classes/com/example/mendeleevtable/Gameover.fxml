<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #000000;"
            xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.mendeleevtable.Controller">
    <ImageView fitHeight="400.0" fitWidth="613.0" layoutX="-9.0" pickOnBounds="true">
        <Image url="@../../../GO.png"/>
    </ImageView>
    <Button layoutX="46.0" layoutY="310.0" mnemonicParsing="false" onAction="#backToMain" prefHeight="76.0"
            prefWidth="198.0" style="-fx-background-color: transporent;" text="На главную" textFill="WHITE">
        <font>
            <Font name="Times New Roman" size="18.0"/>
        </font>
    </Button>
    <Label layoutX="153.0" layoutY="76.0" prefHeight="124.0" prefWidth="283.0"
           text="Ваши жизни закончились В следующий раз повезёт" textFill="WHITE" wrapText="true">
        <font>
            <Font name="Times New Roman" size="24.0"/>
        </font>
    </Label>
    <Label layoutX="145.0" layoutY="223.0" prefHeight="45.0" prefWidth="155.0" text="Набрано очков:" textFill="WHITE">
        <font>
            <Font name="Times New Roman" size="20.0"/>
        </font>
    </Label>
    <Button layoutX="362.0" layoutY="310.0" mnemonicParsing="false" onAction="#toGameButton" prefHeight="76.0"
            prefWidth="198.0" style="-fx-background-color: transporent;" text="Начать игру" textFill="WHITE">
        <font>
            <Font name="Times New Roman" size="18.0"/>
        </font>
    </Button>
    <Label fx:id="totalPoints" layoutX="287.0" layoutY="223.0" prefHeight="45.0" prefWidth="75.0"
           textFill="#ffffff">
        <font>
            <Font name="Times New Roman" size="20.0"/>
        </font>
    </Label>
</AnchorPane>
